= form_for(@gadget, :url => widget_gadgets_path(@widget)) do |f|
  -if @gadget.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gadget.errors.count, "error")} prohibited this gadget from being saved:"
      %ul
        - @gadget.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .actions
    = f.submit 'Save'
