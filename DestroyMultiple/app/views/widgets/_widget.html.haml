%tr{:name => "widget_#{widget.id}", :id => "#{widget.id}" }
  %td= h link_to widget.name, widget_path(widget), :remote => true
  %td= widget.description
  %td{:style => 'text-align:center;'}= widget.gadgets.count
  %td.edit-widget= link_to 'Edit', edit_widget_path(widget)
  %td= link_to 'Remove', widget_path(widget), :method => :delete
